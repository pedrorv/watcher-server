{
  "name": "watcher-server",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "node ./build/main.js",
    "dev": "npm run migrate up && nodemon -r dotenv/config --exec 'ts-node' ./src/main.ts",
    "build": "tsc",
    "build:lambda": "rm -rf build && NODE_ENV=production webpack && cp ../watcher/dist/watcher.js build/watcher.js && zip -rj lambda.zip build -x \"*.txt\" \"*.DS_Store\"",
    "lint": "eslint 'src/**/*.ts'",
    "migrate": "node-pg-migrate -m db/migrations --tsconfig ./tsconfig.json",
    "deploy": "npm run build:lambda && aws lambda update-function-code --function-name watcher-server --zip-file fileb://lambda.zip --profile watcher"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "node-pg-migrate": "^6.2.1",
    "pg": "^8.7.1",
    "serverless-http": "^3.0.1",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.8.1",
    "@types/express": "^4.17.6",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "dotenv": "^8.6.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.5",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
